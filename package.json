{
  "name": "clean-node-starter",
  "version": "0.1.0",
  "description": "Just clean and minimal boilerplate for node-js application",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "eslint": "eslint ./src --cache --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "eslint": "^5.12.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.16.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(js)": [
      "yarn eslint",
      "git add"
    ]
  },
  "keywords": [
    "node.js",
    "js",
    "boilerplate"
  ],
  "author": "mbalabash",
  "license": "MIT"
}
